{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "extended": "true"
    }
  },
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "davidanson.vscode-markdownlint",
      ]
    }
  },
  "portsAttributes": {
    "8080": {
      "label": "Build --Serve"
    }
  }
}
